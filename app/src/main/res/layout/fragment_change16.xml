<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Cell.Top"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/TextView_Header"
            android:text="原密码&#160;&#160;&#160;&#160;" />

        <EditText
            android:id="@+id/edt_old16"
            style="@style/EditText_Base"
            android:hint="请输入"
            android:maxLength="@integer/pwd_length" />
    </LinearLayout>

    <LinearLayout style="@style/Cell.Middle">

        <TextView
            style="@style/TextView_Header"
            android:text="设置密码" />

        <EditText
            android:id="@+id/edt_16"
            style="@style/EditText_Base"
            android:hint="请输入"
            android:maxLength="@integer/pwd_length" />
    </LinearLayout>


    <LinearLayout style="@style/Cell.Bottom">

        <TextView
            style="@style/TextView_Header"
            android:text="确认密码" />

        <EditText
            android:id="@+id/edt_17"
            style="@style/EditText_Base"
            android:hint="请确认"
            android:maxLength="@integer/pwd_length" />
    </LinearLayout>

    <TextView
        style="@style/Note.Small"
        android:text="密码由6-16位字母,数字或符号组成" />

    <Button
        android:id="@+id/btn_change"
        style="@style/Button.Orange"
        android:text="修改" />
</LinearLayout>