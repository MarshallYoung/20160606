<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_cmb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank"
                style="@style/TextView_Header"
                android:text="银行" />

            <TextView
                android:id="@+id/tv_card"
                style="@style/TextView_Header"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Cell_Top"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/TextView_Header"
            android:text="还款金额" />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/EditText_Base"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_arrival_time"
        style="@style/Cell_Bottom">

        <TextView
            style="@style/TextView_Header"
            android:text="到账时间" />

        <TextView
            android:id="@+id/tv_arrival_time"
            style="@style/EditText_Base"
            android:gravity="right"
            android:paddingRight="30dp"
            android:text="立即到账"
            android:textColor="@color/orange" />

        <View style="@style/Icon_Arrow.Right_Gray" />
    </LinearLayout>

    <TextView
        style="@style/TextView_Note_Small"
        android:text="只支持借记卡刷卡" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/Button_Orange"
        android:text="确认刷卡" />
</LinearLayout>