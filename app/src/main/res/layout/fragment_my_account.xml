<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/icon_user_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextView_Header"
                android:text="用户"
                android:textSize="18sp" />

            <TextView
                style="@style/TextView_Header"
                android:layout_marginTop="5dp"
                android:text="13888888888"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Note.Small"
                android:text="身份信息"
                android:textColor="@color/gray_dark" />

            <LinearLayout style="@style/Cell.Top">

                <TextView
                    style="@style/TextView_Header"
                    android:text="姓名&#12288;" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="用户" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Bottom">

                <TextView
                    style="@style/TextView_Header"
                    android:text="身份证" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="110456********1500" />
            </LinearLayout>

            <TextView
                style="@style/Note.Small"
                android:text="收款账户"
                android:textColor="@color/gray_dark" />

            <LinearLayout style="@style/Cell.Top">

                <TextView
                    style="@style/TextView_Header"
                    android:text="账户名称" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="用户" />

                <Button
                    style="@style/Button.Transparent"
                    android:text="变更"
                    android:textColor="@color/selector_orange" />

                <View style="@style/Icon.Arrow.Gray" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Middle">

                <TextView
                    style="@style/TextView_Header"
                    android:text="账户卡号" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="6212 2345 **** **** 012" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Middle">

                <TextView
                    style="@style/TextView_Header"
                    android:text="银行名称" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_cmb" />

                <TextView
                    style="@style/EditText_Base"
                    android:layout_marginLeft="2dp"
                    android:text="招商银行" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Bottom">

                <TextView
                    style="@style/TextView_Header"
                    android:text="支行名称" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="招商银行东直门支行" />
            </LinearLayout>

            <TextView
                style="@style/Note.Small"
                android:text="经营信息"
                android:textColor="@color/gray_dark" />

            <LinearLayout style="@style/Cell.Top">

                <TextView
                    style="@style/TextView_Header"
                    android:text="商户名称" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="大商户" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Middle">

                <TextView
                    style="@style/TextView_Header"
                    android:text="营业执照" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Middle">

                <TextView
                    style="@style/TextView_Header"
                    android:text="从事行业" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="其他" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Middle">

                <TextView
                    style="@style/TextView_Header"
                    android:text="经营地址" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="北京市东城区中央电视台" />
            </LinearLayout>

            <LinearLayout style="@style/Cell.Middle">

                <TextView
                    style="@style/TextView_Header"
                    android:text="票据名称" />

                <TextView
                    style="@style/EditText_Base"
                    android:text="商户票据" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>