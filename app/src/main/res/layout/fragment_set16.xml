<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Cell_Top"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="@dimen/icon_length"
            android:layout_height="@dimen/icon_length"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_lock" />

        <EditText
            android:id="@+id/edt_16"
            style="@style/EditText_Base"
            android:hint="密码"
            android:maxLength="@integer/pwd_length" />
    </LinearLayout>

    <LinearLayout style="@style/Cell_Bottom">

        <ImageView
            android:layout_width="@dimen/icon_length"
            android:layout_height="@dimen/icon_length"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_lock" />

        <EditText
            android:id="@+id/edt_17"
            style="@style/EditText_Base"
            android:hint="确认密码"
            android:maxLength="@integer/pwd_length" />
    </LinearLayout>

    <TextView
        style="@style/TextView_Note_Small"
        android:text="密码由6-16位字母,数字或符号组成" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/Button_Orange"
        android:text="确认" />
</LinearLayout>