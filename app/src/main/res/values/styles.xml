<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="LinearLayout">
        <item name="android:background">@color/gray_light</item>
    </style>
    <!-- 按钮 -->
    <style name="Button">
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Button.Blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_blue</item>
    </style>

    <style name="Button.Orange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_btn_transparent</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_btn_toolbar</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Calculator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.25dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@drawable/selector_btn_calculator</item>
        <item name="android:textSize">36sp</item>
    </style>
    <!-- Cell,LinearLayout专用 -->
    <style name="Cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cell_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/cell_padding</item>
        <item name="android:paddingRight">@dimen/cell_padding</item>
    </style>

    <style name="Cell.Top">
        <item name="android:background">@drawable/selector_cell_top</item>
    </style>

    <style name="Cell.Middle">
        <item name="android:background">@drawable/selector_cell_middle</item>
    </style>

    <style name="Cell.Bottom">
        <item name="android:background">@drawable/selector_cell_bottom</item>
    </style>

    <style name="Cell.Single">
        <item name="android:background">@drawable/selector_cell_single</item>
    </style>
    <!-- 提示 -->
    <style name="Note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Note.Top">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="Note.Small">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <!-- 放在EditText前面的TextView -->
    <style name="TextView_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:lines">1</item>
    </style>
    <!-- 基本的EditText -->
    <style name="EditText_Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">#00000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!-- 图标 -->
    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_length</item>
        <item name="android:layout_height">@dimen/icon_length</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Icon.Arrow">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Icon.Arrow.Gray">
        <item name="android:background">@drawable/icon_arrow_right_gray</item>
    </style>
    <!-- 标记 -->
    <style name="Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">@dimen/tag_text_size</item>
    </style>

    <style name="Tag.Stroke">
        <item name="android:background">@drawable/shape_stroke_red</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <!-- 联迪自定义控件 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
</resources>